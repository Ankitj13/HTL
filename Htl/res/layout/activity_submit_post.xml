<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Submit_postActivity"
    android:background="@color/white" >
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1"
    android:gravity="center"
    android:layout_gravity="center"
    >

    <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    >
    <TextView android:id="@+id/CategoryName"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:textColor="@color/like_text"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textSize="26dp"
        android:hint="Category"
        android:textStyle="bold"
        android:layout_weight="1"
        android:padding="@dimen/iconpadding"/>
  
  <ImageButton android:id="@+id/changebg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/changebg_icon"
        android:layout_gravity="left"
        android:contentDescription="changebg"
        android:background="@color/white"
        android:paddingRight="16dp"
        android:paddingTop="10dp"/>
   </LinearLayout>
    </LinearLayout>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="0.2"
    android:gravity="center"
    android:layout_gravity="center"
   >
   <EditText android:id="@+id/post_contentText"
        android:inputType="textMultiLine"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:hint="@string/post_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="40dp"
        android:textColor="@color/like_text"
        android:textStyle="bold"
        />
   </LinearLayout>
   <LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1"
    android:gravity="center"
    android:layout_gravity="center"
    android:divider="@drawable/listdivider">
    
    <TextView android:id="@+id/doPost" 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#ffffff"
        android:textColor="@color/like_text"
        android:text="@string/post"
        android:textSize="22sp"
        android:layout_gravity="center"/>
	
</LinearLayout>
    

</LinearLayout>
