                    android:background="@drawable/likecount"
                    />
		 <ImageButton android:id="@+id/like2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="You deserved it"
            android:background="@color/white"
            android:padding="@dimen/iconpadding"
            /> 
            <TextView
                    android:id="@+id/like2Count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
